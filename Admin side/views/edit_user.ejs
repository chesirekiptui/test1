<%- include header %>

<div class="page-data">
            
        <form method="post" action="/home/edit/<%=data[0].id%>">
            <table cellpadding="11">
            <tr>
                <td class="label">Name</td><td>: <input type="text" name="name" value="<%=data[0].name%>" required></td>
             </tr>
             <tr>
                <td class="label" valign="top">Username</td>
                <td valign="top">: 
                    <textarea name="username" required cols="30" rows="5"><%=data[0].username%></textarea>
                </td>
            </tr>
            <tr>
                <td class="label">Centre ID</td><td>: <input type="text" value="<%=data[0].centre_id%>" name="centre_id" required></td>
             </tr>
              <tr>
                <td class="label">Password</td><td>: <input type="text" name="password" value="<%=data[0].password%>" required></td>
             </tr>
             <tr>
                <td class="label"></td>
                <td>
                    &nbsp; <input type="submit" name="submit" value="Save">
                   <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                </td>
             </tr>
            </table>
        </form>
        
    </div>

    <%- include footer %>